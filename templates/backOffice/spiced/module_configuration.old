
<form method="POST" action="{url path="/admin/module/catalogue/update"}" class="clearfix">
 

<div class="general-block-decorator">
		<div class="row">
			<div class="col-md-12 title title-without-tabs">
				{intl l='Edit your catalogue.' d='catalogue.bo.default'}
			</div>
		</div>
	
		<div class="row">
			<div class="col-md-12">
				<div class="form-container">
					{form name="catalogue.image"}
						<form method="POST" action="{url path="/admin/module/catalogue/upload"}" {form_enctype} class="clearfix">
							{form_hidden_fields}
							{form_field field='file'}
								<div class="form-group {if $error}has-error{/if}">
									<label for="{$label_attr.for}" class="control-label">{intl d='catalogue.bo.default' l='Add an image to the catalogue'}</label>
									<div class="input-group">
										<input type="file" id="{$label_attr.for}" {if $required}required="required"{/if} name="{$name}" value="{$value}" title="{intl l='catalogue image' d='catalogue.bo.default'}" placeholder="{intl l='catalogue image' d='catalogue.bo.default'}" class="form-control">
										<span class="input-group-btn">
											<input type="submit" class="form-submit-button btn btn-sm btn-success" value="{intl d='catalogue.bo.default' l='Add this image to the catalogue'}" >
										</span>
									</div>
								</div>
							{/form_field}
						</form>
					{/form}
				</div>
			</div>
		</div>
	
		<div class="row">
			<div class="col-md-12 title title-without-tabs">
				{intl l='catalogue images' d='catalogue.bo.default'}
			</div>
		</div>
	
		<div class="row">
			<div class="col-md-12">
				<div class="form-container">
					{ifloop rel="catalogue.image"}
						{form name="catalogue.update.form"}
						<form method="post" action="{url path="/admin/module/catalogue/update"}" {form_enctype} class="clearfix">
	
							{include
								file = "includes/inner-form-toolbar.html"
								page_url   = "{url path='/admin/module/catalogue'}"
								close_url  = "{url path='/admin/modules'}"
							}
	
							{form_hidden_fields}
	
							{loop name="catalogue.image" type="config" width="550" height="200" resize_mode="borders" backend_context="1" lang="$edit_language_id" limit="1" **/}
							<div class="well well-sm">
								<div class="row">
									<div class="col-md-6">
										<p>
											<a href="{$ORIGINAL_IMAGE_URL}" class="thumbnail" target="_blank">
												<img src="{$IMAGE_URL}" alt="{$ALT}">
											</a>
										</p>
	
										<div class="btn-group">
											<a class="btn btn-default btn-sm image-delete" href="#delete_catalogue_dialog" data-toggle="modal" data-id="{$ID}">
												<i class="glyphicon glyphicon-trash"></i> {intl d='catalogue.bo.default' l='Remove this image'}
											</a>
										</div>
	
										
									</div>
	
									<div class="col-md-6">
										{render_form_field field="year" value=$YEAR}
										{render_form_field field="title" value=$TITLE}
										{render_form_field field="alt" value=$ALT}
										<!-- {render_form_field field="url" value=$URL} -->
										{render_form_field field="description" extra_class="wysiwyg" value=$DESCRIPTION}
										{* Not yet implemented
										{render_form_field field="postscriptum" value=$POSTSCRIPTUM}
										*}
									</div>
								</div>
							</div>
							{/loop}
	
							{include
								file = "includes/inner-form-toolbar.html"
								page_url   = "{url path='/admin/module/catalogue'}"
								close_url  = "{url path='/admin/modules'}"
								page_bottom = true
							}
						</form>
						{/form}
					{/ifloop}
	
					{elseloop rel="catalogue.image"}
						<div class="alert alert-info">
							{intl d='catalogue.bo.default' l="Your catalogue contains no image. Please add one using the form above."}
						</div>
					{/elseloop}
				</div>
			</div>
		</div>
	</div>
	
	{capture "delete_dialog"}
		<input type="hidden" name="image_id" id="image_delete_id" value="" />
	{/capture}
	
	{include
	file = "includes/generic-confirm-dialog.html"
	
	dialog_id       = "delete_catalogue_dialog"
	dialog_title    = {intl l="Delete a catalogue image" d="catalogue.bo.default"}
	dialog_message  = {intl l="Do you really want to remove this image from the catalogue ?" d="catalogue.bo.default"}
	
	form_action         = {url path='/admin/module/catalogue/delete'}
	form_content        = {$smarty.capture.delete_dialog nofilter}
	}
	
	
	
	
	



