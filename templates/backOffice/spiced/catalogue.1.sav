<html lang="fr" encoding="utf-8">
    <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <style>
        #titre_catalogue{
            font-size:30;
            color:rgb(34,71,4);
            font-family: Arial, sans-serif;
            font-weight:700;
            margin-top:30px;
            text-align:center;
        }
        #sous-titre_catalogue{
            font-size:25;
            color:rgb(83,83,83);
            font-family: Arial, sans-serif;
            font-weight:700;
            margin-top:30px;
            text-align:center;
        }
        #date_debut_catalogue{
            font-size:25;
            color:rgb(83,83,83);
            font-family: Arial, sans-serif;
            margin-top:30px;
            text-align:center;
        }
        #texte-intro_catalogue{
            font-size: 20px;
            color: rgb(83,83,83);
            font-family: Arial, sans-serif;
            margin-top: 30px;
            padding: 30 100 0 100;
            text-align:center;
        }
        #url_site_catalogue{
            font-size:20px;
            color:rgb(60,40,127);
            font-family: Arial, sans-serif;
            font-weight:400;
            margin-top:30px;
            text-align:center;
        }
        #responsable_catalogue{
            font-size:30px;
            color:rgb(34,71,4);
            font-family: Arial, sans-serif;
            font-weight:400;
            margin-top:30px;
            text-align:center;
        }
        #adresse_catalogue,#siret,.tel_catalogue{
            font-size:15px;
            font-family: Arial, sans-serif;
            font-weight:600;
            margin-top:60px;
            text-align:center;
        }
        .tel_catalogue{
            margin-top:5px;
        }
        #div_tel_catalogue{
            margin-top: 60px;
        }
        body{
            width:210mm;
            height:297mm;
            padding:20px 20px 20px 20px;
            margin-top:30px;
            text-align:center;
        }
        #image_couverture_catalogue img{
            width:130mm;
            margin-left:40mm;
            margin-top:30px;
        }
        .famille, .postscriptum, .description_name{
            font-family: Arial, sans-serif;
            font-size:12px;
            font-weight:400;
            text-align:left;
            margin-top:30px;
            margin-left:55px
        }
        .postscriptum{
            margin-bottom: 55px;
        }
        .nom{
            font-family: Arial, sans-serif;
            font-weight:bold;
            text-align:left;
            margin-top:30px;
            margin-left:55px;
        }
        .img-fougere{
            width: 150px;
            float:right;
            margin-right: 55px;
        }
        .description{
            font-family: Arial, sans-serif;
            font-size: 12px;
            text-align: justify;
            margin-top:20px;
            margin-left:55px;
            position:relative;
            top:-150px;
            width: 494px;
        }

        </style>
    </head>
    <body>
        {loop name="catalogue.pdf.image" type="catalogue_config" width="550" height="200" resize_mode="borders" backend_context="1" lang="$edit_language_id" limit="1"}
        <div id="titre_catalogue">{$TITLE}</div>
        <div id="sous-titre_catalogue">{$SUBTITLE}</div>
        <div id="date_debut_catalogue">{$TITRE_DATE_DEBUT}</div>
        <div id="image_couverture_catalogue">
            <img src="{$IMAGE_URL}"/>
        </div>
        

        <div id="texte-intro_catalogue">
            {$TEXTE_INTRO}
        </div>
        {/loop}
        {loop name="server.config" type="config" variable="url_site" lang="$edit_language_id" limit="1"}
        <div id="url_site_catalogue"> 
            {$VALUE}
        </div>
        {/loop}
        {loop name="catalogue.pdf.image" type="catalogue_config" width="550" height="200" resize_mode="borders" backend_context="1" lang="$edit_language_id" limit="1"}
        <div id="responsable_catalogue">Anne-Marie Gaillard</div>
        <div id="div_tel_catalogue">
            <div class="tel_catalogue">
                Tel : {$TEL_FIXE}
            </div>
            <div class="tel_catalogue">
                Tel : {$TEL_MOBILE}
            </div>
        </div>
        <div class="tel_catalogue"></div>
        <div id="adresse_catalogue">{$ADRESSE_VOIE} {$ADRESSE_CODEPOSTAL} {$ADRESSE_COMMUNE}</div>
        <div id="siret">Siret {$SIRET}</div>
        {/loop}
        <page></page>
         {loop name="catalog.pdf.foug√®res" type="catalogue" offset="46" limit="10"}
        <div class="div-section" style="height:95mm">
                <div class="titre_section">
                    <div class="nom">{$TITLE}</div>
                    <div class="famille">Famille : {$FAMILY}</div>
                    <div class="description_name">{$NAME}</div>
                </div>
            <div class="div-image">
                {loop type="image" name="image.main" product=$ID  height="200" resize_mode="borders" limit="1"}
                    <img src="{$IMAGE_URL nofilter}" alt="{$TITLE}" class="img-responsive img-fougere" itemprop="image" data-toggle="magnify"/>
                {/loop}
                {elseloop rel="image.main" }
                   <img src="{image file='assets/img/no_photo.png'}" alt="{$TITLE}" class="img-responsive img-fougere" itemprop="image" data-toggle="magnify"/>
                {/elseloop}
            </div>
            <div class="description">{$DESCRIPTION nofilter}</div>
            <div class="content-section">
                <div class="postscriptum">
                    {if {$HAS_ORIGIN}}
                        <span class="titre-postscriptum">Origine: </span><span>{$ORIGIN}</span>
                    {/if}
                </div>
                
            </div>
           
        </div>
        <hr/>
        {/loop} 
</body>
</html>